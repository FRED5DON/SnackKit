<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/background_top_line"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">


    <androidx.appcompat.widget.ButtonBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/iconPadding"
        android:layout_marginBottom="@dimen/iconPadding"
        android:paddingLeft="@dimen/fieldSetMargin"
        android:paddingRight="@dimen/fieldSetMargin"
        >
        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/letterGap"
            android:layout_marginRight="@dimen/letterGap"
            android:background="@drawable/background_bottom_line"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/defaultTextColor"
            android:textSize="@dimen/H3" />

        <Button
            android:id="@+id/bt_send"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:background="@drawable/accent_bg_round_corner"
            android:text="@string/send"
            android:textSize="@dimen/H3"
            android:textColor="@color/white"
            />

    </androidx.appcompat.widget.ButtonBarLayout>

</LinearLayout>