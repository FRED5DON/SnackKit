<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/tabbarPadding">

    <ImageView
        android:id="@+id/iv_ext_icon"
        android:layout_width="@dimen/notification_large_icon_width"
        android:layout_height="@dimen/notification_large_icon_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/iconSpacing"
        app:srcCompat="@drawable/ic_vector_loading"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/tv_ext_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/iconSpacing"
        android:maxLines="1"
        android:textColor="@drawable/selector_tab_chat"
        android:textSize="@dimen/H5"
        tools:text="Menu one" />

</RelativeLayout>