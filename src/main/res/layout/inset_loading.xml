<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:showIn="@layout/mask_layers_loading_layout">

    <ProgressBar
        android:id="@+id/pb_mask_loading_layers"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/formMargin" />

    <TextView
        android:id="@+id/tv_msg_mask_loading_layers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_text_loading"
        android:textColor="@color/defaultHintTextColor"
        android:textSize="@dimen/H5" />

</LinearLayout>